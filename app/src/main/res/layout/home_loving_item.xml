<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20px"
    >

    <ImageView
        android:layout_width="300px"
        android:layout_height="300px"
        android:id="@+id/home_loving_item_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:maxEms="13"
        android:maxLines="2"
        android:textSize="@dimen/home_community_text"
        android:textColor="@color/colorBlackText"
        android:id="@+id/home_loving_item_title"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/home_loving_item_image"
        android:layout_marginRight="30px"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorGrayText"
        android:layout_alignBottom="@id/home_loving_item_image"
        android:layout_toLeftOf="@id/home_loving_item_image"
        android:id="@+id/view" />

    <TextView
        android:textSize="@dimen/textSize_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:maxEms="13"
        android:maxLines="2"
        android:textColor="@color/colorGrayText"
        android:id="@+id/home_loving_item_contentIntr"
        android:layout_marginRight="30px"
        android:layout_below="@id/home_loving_item_title"
        android:layout_marginTop="60px"
        android:layout_toLeftOf="@id/home_loving_item_image"
        android:layout_alignParentLeft="true"
        android:text="eweqe"/>

    <TextView
        android:layout_marginTop="30px"
        android:layout_marginBottom="20px"
        android:text="作者"
        android:textSize="@dimen/textSize_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/home_loving_item_reportName"
        android:layout_below="@+id/view"
        android:layout_alignLeft="@+id/home_loving_item_contentIntr"
        android:layout_alignStart="@+id/home_loving_item_contentIntr" />

</com.zhy.autolayout.AutoRelativeLayout>