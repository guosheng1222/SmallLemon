<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@color/activity_register_bt"
        android:layout_width="match_parent"
        android:layout_height="700px"
        >

        <ImageView
            android:layout_width="300px"
            android:layout_height="300px"
            android:layout_centerInParent="true"
            android:src="@mipmap/logo_header" />
    </RelativeLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:orientation="vertical"
        >
        <!--分割线-->
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/activity_login_forget_pone" />
        <!--输入注册手机号-->
        <EditText
            android:id="@+id/activity_rigster_forget_pone"
            android:layout_width="match_parent"
            android:layout_height="136px"
            android:paddingLeft="30px"
            android:text="@string/activity_login_forget_pone"
            android:textColor="@color/activity_login_forget_pone" />
        <!--分割线-->
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/activity_login_forget_pone" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:orientation="horizontal">
        <!--输入验证码-->
        <EditText
            android:id="@+id/activity_rigister_verification"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:paddingLeft="30px"
            android:text="@string/activity_login_forget_verification"
            android:textColor="@color/activity_login_forget_pone" />
        <!--获取验证码-->
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="20px"
            android:padding="10px"
            app:cardBackgroundColor="@color/activity_login_forget_pone_bt"
            app:cardCornerRadius="6px">

            <Button
                android:id="@+id/activity_login_forget_verification_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/activity_login_forget_pone_bt"
                android:gravity="center"
                android:text="@string/activity_login_forget_verification_tv" />
        </android.support.v7.widget.CardView>
    </com.zhy.autolayout.AutoLinearLayout>
    <!--分割线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="@color/activity_login_forget_pone" />
    <!--分割线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:layout_marginTop="100px"
        android:background="@color/activity_login_forget_pone" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:orientation="horizontal">
        <!--显示和隐藏密码-->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/watch_password_selector" />
        <!--设置密码-->
        <EditText
            android:id="@+id/activity_login_forget_possword"
            android:layout_width="match_parent"
            android:layout_height="138px"
            android:paddingLeft="30px"
            android:text="@string/activity_login_forget_possword"
            android:textColor="@color/activity_login_forget_pone"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </com.zhy.autolayout.AutoRelativeLayout>
    <!--分割线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="@color/activity_login_forget_pone" />
    <TextView
        android:layout_margin="10px"
        android:text="@string/activity_register_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="120px"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <CheckBox
            android:layout_marginRight="20px"
            android:layout_marginLeft="20px"
            android:checked="true"
            android:button="@null"
            android:layout_gravity="center_vertical"
            android:background="@drawable/signup_item_seletor"
            android:layout_width="50px"
            android:layout_height="50px" />
        <TextView
            android:layout_gravity="center_vertical"
            android:text="@string/activity_register_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </com.zhy.autolayout.AutoLinearLayout>
    <!--注册-->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        app:cardBackgroundColor="@color/activity_login_forget_pone_bt"
        app:cardCornerRadius="6px">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/activity_login_forget_pone_bt"
            android:gravity="center"
            android:text="@string/activity_register_bt_text"
            android:textSize="20dp" />
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_marginTop="60px"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/activity_register_haveId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/colorBlackText"
            android:textSize="@dimen/textSize_normal"
            android:text="@string/activity_register_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" />
    </LinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
