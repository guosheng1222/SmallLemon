<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:paddingTop="69px">


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="700px"
        android:background="@drawable/profile_bg"
        android:orientation="vertical">

        <com.example.view.CircleImageView
            android:id="@+id/iv_user_head"
            android:layout_width="200px"
            android:layout_height="200px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80px"
            android:src="@drawable/icon_boy_bg" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="狗蛋子"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textSize_normal" />

            <ImageView
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_marginLeft="5px"
                android:src="@drawable/profile_male" />
        </com.zhy.autolayout.AutoLinearLayout>


        <TextView
            android:id="@+id/tv_guanzhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50px"
            android:text="关注"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textSize_normal" />

        <TextView
            android:id="@+id/tv_guanzhu_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50px"
            android:text="0"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textSize_normal" />

    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="25px"
        android:background="#227c7777" />

    <!--我的界面类似ListView的布局-->

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/base_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="20px"
        android:paddingTop="20px">

        <ImageView
            android:layout_width="130px"
            android:layout_height="80px"
            android:layout_margin="20px"
            android:src="@drawable/me_title_profile" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="基本资料"
            android:textColor="@color/colorBlackText"
            android:textSize="50px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30px"
            android:text="修改资料在这里哦"
            android:textSize="40px" />

        <ImageView
            android:layout_width="40px"
            android:layout_height="70px"
            android:layout_marginRight="50px"
            android:src="@drawable/next_indicator" />
    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#44000000" />



    <android.support.v7.widget.RecyclerView
        android:id="@+id/mine_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#44000000" />

    <View
        android:layout_width="match_parent"
        android:layout_height="25px"
        android:background="#227c7777" />

    <!--我的帖子-->

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/mine_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="20px"
        android:paddingTop="20px">

        <ImageView
            android:layout_width="130px"
            android:layout_height="80px"
            android:layout_margin="20px"
            android:src="@drawable/me_title_post" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="我的帖子"
            android:textColor="@color/colorBlackText"
            android:textSize="50px" />

        <ImageView
            android:layout_width="40px"
            android:layout_height="70px"
            android:layout_marginRight="50px"
            android:src="@drawable/next_indicator" />
    </com.zhy.autolayout.AutoLinearLayout>


    <!--意见反馈-->

    <View
        android:layout_width="match_parent"
        android:layout_height="25px"
        android:background="#227c7777" />

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/suggest_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="20px"
        android:paddingTop="20px">

        <ImageView
            android:layout_width="130px"
            android:layout_height="80px"
            android:layout_margin="20px"
            android:src="@drawable/me_title_feedback" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="意见反馈"
            android:textColor="@color/colorBlackText"
            android:textSize="50px" />

        <ImageView
            android:layout_width="40px"
            android:layout_height="70px"
            android:layout_marginRight="50px"
            android:src="@drawable/next_indicator" />
    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#44000000" />
    <!--设置-->
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="20px"
        android:paddingTop="20px">

        <ImageView
            android:layout_width="130px"
            android:layout_height="80px"
            android:layout_margin="20px"
            android:src="@drawable/me_setting" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="设置"
            android:textColor="@color/colorBlackText"
            android:textSize="50px" />

        <ImageView
            android:layout_width="40px"
            android:layout_height="70px"
            android:layout_marginRight="50px"
            android:src="@drawable/next_indicator" />
    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#227c7777" />

</com.zhy.autolayout.AutoLinearLayout>
