<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_web_view"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/web_img"
            android:layout_width="40px"
            android:layout_height="40px"
            android:layout_margin="40px"
            android:src="@mipmap/ic_expand_less_black_12dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="120px"
            android:layout_weight="5"
            android:gravity="center"
            android:text="详情"
            android:textColor="#000"
            android:textSize="18sp" />

    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="#22000000" />

    <WebView
        android:id="@+id/web"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/web_comments"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/webview_comments_selector"
            android:gravity="center_horizontal"
            android:text="评论" />

        <RadioButton
            android:id="@+id/web_praise"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:layout_weight="1"
            android:button="@null"
            android:checked="false"
            android:drawableTop="@drawable/webview_praise_selector"
            android:gravity="center_horizontal"
            android:text="赞" />

        <RadioButton
            android:id="@+id/web_share"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/webview_share_selector"
            android:gravity="center_horizontal"
            android:text="分享" />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
