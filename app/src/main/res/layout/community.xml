<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20px"
    app:cardCornerRadius="20px">


    <TextView
        android:id="@+id/tv_line"
        android:layout_width="5px"
        android:layout_height="30px"
        android:layout_marginTop="20px"
        android:background="#FF0"
        android:lines="1"
        android:text=" "
        android:textSize="16sp" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10px"
        android:paddingTop="10px">


        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="200px"
                android:text="标题标题标题标题标题标题标题标题标题标题"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/content_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="60px"
                android:layout_marginTop="20px"
                android:text="简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介"
                android:textSize="12sp" />

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/view_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:scaleType="centerCrop"
                    android:layout_width="220px"
                    android:layout_height="220px"
                    android:layout_margin="20px" />

                <ImageView
                    android:scaleType="centerCrop"
                    android:layout_width="220px"
                    android:layout_height="220px"
                    android:layout_margin="20px" />

                <ImageView
                    android:scaleType="centerCrop"
                    android:layout_width="220px"
                    android:layout_height="220px"
                    android:layout_margin="20px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10px"
                android:paddingTop="10px">

                <TextView
                    android:id="@+id/broadcasting_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="你的月亮我的心"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/timer_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10px"
                    android:text="10月29日 09:40"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/go_to_comment_iv"
                    android:layout_width="40px"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10px"
                    android:src="@mipmap/profile_others_msg2x" />

                <TextView
                    android:id="@+id/comment_number_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40px"
                    android:text="18"
                    android:textSize="12sp" />

            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>
</android.support.v7.widget.CardView>
